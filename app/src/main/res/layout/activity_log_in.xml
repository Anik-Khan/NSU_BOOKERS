<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LOparent"
    android:background="@color/white"
    android:clipToPadding="false"
    tools:context="com.anix.bookers.LogInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:clipToPadding="false"
        android:background="@drawable/gradientyellow">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/logo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/squareshape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/deepyellow">

            <EditText
                android:id="@+id/ETemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/deepyellow" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:textColorHint="@color/deepyellow"
            >

            <EditText
                android:id="@+id/ETpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/deepyellow" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton"
        android:text="LOG IN"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:id="@+id/BTlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:onClick="LogInBtn"
        android:stateListAnimator="@null"
        android:elevation="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTlogin"
        android:text="FORGOT PASSWORD?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BTlogin"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:text="Dont Have an Account? SIGN UP"
        android:onClick="TVsignup"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <ProgressBar
        android:id="@+id/progressbarlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:elevation="15dp"
        android:stateListAnimator="@null"
        android:layout_centerVertical="true"
        android:visibility="gone" />



</RelativeLayout>

